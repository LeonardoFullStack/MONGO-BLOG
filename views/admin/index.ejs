<%- include('partials/header.ejs') %>
<main>
<h1>
    <%= title %>
</h1>
<p>
    <%= msg %>
</p>
    <a href="/post"><button>
        Añadir una entrada
    </button></a>
    <form action="/admin/search" method="post">
        <input type="text" name="search">
        <input type="submit" value="Buscar">
    </form>
<% data.forEach(element => { %>
    <div class="container">
        <div class="gridTitle">
            <%= element.title %>
        </div>
        <div class="gridDate">
            <%= element.date %>
        </div>
        <div class="gridContent">
            <%= element.extract %>
        </div>
        <div class="gridImage">
            <img class="entryImage" src="<%= element.entryimage %>">
        </div>
        <div class="gridEdit">
            
        <a href="viewOne/<%= element.id_entry %>">
            <button>
                Leer más
            </button>
        </a>
        <a href="edit/<%= element.id_entry %>">
            <button>
                editar
            </button>
        </a>
        </div>
        <div class="gridName">
            <%= element.surname %>
        </div>
          
    </div> 
<% }) %>

</main>
<%- include('partials/footer.ejs') %>
